{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "esModuleInterop": true,
        "baseUrl": "./",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "paths": {
            "@/*": ["src/*"],
        },
    },
    "include": [
        "src",
        "types"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}